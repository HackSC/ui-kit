    "style-loader": "^3.3.2",
    "url-loader": "^4.1.1"
  },
  "peerDependencies": {
    "fuse.js": "^6.6.2",
    "react": "^18.2.0",
    "react-calendar": "^4.0.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "styled-components": "^5.3.9"
  },
  "config": {
