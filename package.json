    "@semantic-release/git": "^10.0.1",
    "@storybook/react": "^6.5.16",
    "@types/react-calendar": "^3.9.0",
    "@types/styled-components": "^5.1.26",
    "babel-loader": "^9.1.2",
    "commitizen": "^4.3.0",
    "css-loader": "^6.7.3",
